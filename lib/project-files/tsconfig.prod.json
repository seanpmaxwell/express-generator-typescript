{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": [
      "ES2020"
    ],                        
    "strict": true,
    "baseUrl": "./",
    "outDir": "temp",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "config.ts"
  ],
  "exclude": [
    "spec",
    "src/public/",
    "scripts",
    "eslint.config.ts"
  ]
}
